{
  "name": "schedule",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:web": "pnpm -C ./packages/web start:dev",
    "start:server": "pnpm -C ./packages/server start:dev",
    "build:web": "pnpm -C ./packages/web build",
    "build:server": "pnpm -C ./packages/server build",
    "build": "npm run build:web && npm run build:server && docker-compose build"
  },
  "packageManager": "pnpm@7.24.3",
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
